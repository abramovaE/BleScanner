<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/set_min_rssi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/set_max_rssi"
        android:hint="@string/set_min_rssi"
        android:digits="-1234567890"
        android:textColor="@color/black"
        android:inputType="number"
        android:padding="15dp"/>

    <EditText
        android:id="@+id/set_max_rssi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/set_min_rssi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/save_rssis_btn"
        android:hint="@string/set_max_rssi"
        android:digits="-1234567890"
        android:textColor="@color/black"
        android:inputType="number"
        android:padding="15dp"
        />


    <Button
        android:id="@+id/save_rssis_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ok"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/set_max_rssi"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:backgroundTint="@null"
        android:background="@drawable/button_bg"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"
        />

</androidx.constraintlayout.widget.ConstraintLayout>